<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chullacafe.Views.OrderPage"
             Title="Mi Pedido">
    <VerticalStackLayout Padding="10">
        <Label Text="Historial de Pedidos" FontSize="24" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Orders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding OrderNumber}" FontSize="16" WidthRequest="100" />
                        <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" FontSize="16" WidthRequest="100" />
                        <Label Text="{Binding Total, StringFormat='${0:F2}'}" FontSize="16" WidthRequest="100" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
